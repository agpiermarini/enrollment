<h3>Create a New Address for <%= @student.name %> </h3>

<%= form_for [@student, @address] do |f| %>
  <%= f.label :description %>
  <%= f.text_area :description, required: true %>
  <%= f.label :street %>
  <%= f.text_field :street, required: true %>
  <%= f.label :city %>
  <%= f.text_field :city, required: true %>
  <%= f.label :state %>
  <%= f.text_field :state, required: true %>
  <%= f.label :zip_code %>
  <%= f.text_field :zip_code, required: true %>
  <%= f.submit %>
<% end %>
